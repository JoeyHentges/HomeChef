  "instructions": {
    "createMany": {
      "data": [
        {
          "step": 0,
          "instruction": "Preheat oven to 375 degrees F. Line three baking sheets with parchment paper and set aside."
        },
        {
          "step": 1,
          "instruction": "In a medium bowl mix flour, baking soda, baking powder and salt. Set aside."
        },
        {
          "step": 2,
          "instruction": "Cream together butter and sugars until combined."
        },
        {
          "step": 3,
          "instruction": "Beat in eggs and vanilla until light (about 1 minute)."
        },
        {
          "step": 4,
          "instruction": "Mix in the dry ingredients until combined."
        },
        {
          "step": 5,
          "instruction": "Add chocolate chips and mix well."
        },
        {
          "step": 6,
          "instruction": "Roll 2-3 Tablespoons (depending on how large you like your cookies) of dough at a time into balls and place them evenly spaced on your prepared cookie sheets."
        },
        {
          "step": 7,
          "instruction": "Bake in preheated oven for approximately 8-10 minutes. Take them out when they are just barely starting to turn brown."
        },
        {
          "step": 8,
          "instruction": "Let them sit on the baking pan for 2 minutes before removing to cooling rack."
        }
      ]
    }
  },
